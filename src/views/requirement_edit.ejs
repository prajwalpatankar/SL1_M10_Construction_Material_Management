<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/requirement/update/<%= data.ORDER_NO %>" method="POST">
          <div class="form-group">
            <input type="text" name="CLIENT_ID" value="<%=data.CLIENT_ID %>" placeholder="Enter Client ID" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="MATERIAL_ID" value="<%=data.MATERIAL_ID %>" placeholder="Enter Material ID" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="QUANTITY" value="<%=data.QUANTITY %>" placeholder="Enter Quantity" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            save
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
