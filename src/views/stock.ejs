<% include partials/_header %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card-body">
        <h1 style="text-align: center;">Material Stock Details</h1><br />
        <form action="/stock/add" method="POST">
          <div class="form-group">
            <label>Add Material Stock </label>
            <select name="MATERIAL_ID">
              <% if (data_material) { %>
              <% for(var i = 0; i < data_material.length; i++) { %>

              <% var flag=0; %>
              <% if (data) { %>
              <% for(var j = 0; j < data.length; j++) { %>

              <% if(data[j].MATERIAL_ID == data_material[i].MATERIAL_ID) { %>
              <% flag=1; %>
              <% } %>
              <% } %>
              <% } %>

              <% if(flag!=1) { %>
              <option value=<%= data_material[i].MATERIAL_ID %>> <%= data_material[i].MATERIAL_NAME %> -
                <%= data_material[i].MATERIAL_TYPE %> - <%= data_material[i].MATERIAL_GRADE %></option>
              <% } %>
              <% } %>
              <% } %>
            </select>
          </div>
          <div class="form-group">
            <input type="text" name="STOCK" placeholder="Enter Stock" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary" style="margin-left: 50%;">
            save
          </button>
        </form>
      </div>
    </div>
  </div>
  <hr> <br> <br>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>Sr. No.</td>
            <td>MATERIAL ID</td>
            <td>MATERIAL</td>
            <td>STOCK</td>
            <td>ACTIONS</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
          <% for(var i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= data[i].MATERIAL_ID %></td>
            <td>
              <% for(var j = 0; j < data_material.length; j++) { %>
                <% if(data[i].MATERIAL_ID == data_material[j].MATERIAL_ID) { %>
                  <%= data_material[j].MATERIAL_NAME %> -- <%= data_material[j].MATERIAL_TYPE %> -- <%= data_material[j].MATERIAL_GRADE %>
                <% } %>
              <% } %>
            </td>
            <td><%= data[i].STOCK %></td>
            <td>
              <a href="/stock/update/<%= data[i].MATERIAL_ID %>" class="btn btn-info">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor"
                  xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                  <path fill-rule="evenodd"
                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                </svg>
              </a>
              <a href="/stock/delete/<%= data[i].MATERIAL_ID %>" class="btn btn-danger"><svg width="1em" height="1em"
                  viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                  <path fill-rule="evenodd"
                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                </svg>
              </a>
            </td>
          </tr>
          <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<% include partials/_footer %>