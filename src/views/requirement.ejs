<% include partials/_header %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <div class="card-body">
        <h1>Transaction of Material</h1><br />
        <form action="/requirement/add" method="POST">
          <div class="form-group">
            <label>Client Name </label>
            <select name="CLIENT_ID">
              <% if (data_client) { %>
              <% for(var i = 0; i < data_client.length; i++) { %>
              <option value=<%= data_client[i].CLIENT_ID %>> <%= data_client[i].CLIENT_NAME %> </option>
              <% } %>
              <% } %>
            </select>
          </div>
          <div class="form-group">
            <label>Material Name </label>
            <select name="MATERIAL_ID">
              <% if (data_material) { %>
              <% for(var i = 0; i < data_material.length; i++) { %>
              <option value=<%= data_material[i].MATERIAL_ID %>> <%= data_material[i].MATERIAL_NAME %> -
                <%= data_material[i].MATERIAL_TYPE %> - <%= data_material[i].MATERIAL_GRADE %></option>
              <% } %>
              <% } %>
            </select>
          </div>
          <div class="form-group">
            <input type="text" name="QUANTITY" placeholder="Enter Quantity" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            save
          </button>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>Sr. No.</td>
            <td>ORDER NO.</td>
            <td>CLIENT ID</td>
            <td>MATERIAL ID</td>
            <td>QUANTITY</td>
            <td>AMOUNT</td>
            <td>ACTION</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
          <% for(var i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= data[i].ORDER_NO %></td>
            <td><%= data[i].CLIENT_ID %></td>
            <td><%= data[i].MATERIAL_ID %></td>
            <td><%= data[i].QUANTITY %></td>
            <td><%= data[i].AMOUNT %></td>
            <td>
              <!-- <a href="/requirement/update/<%= data[i].ORDER_NO %>" class="btn btn-info">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                  </a> -->
              <a href="/requirement/delete/<%= data[i].ORDER_NO %>" class="btn btn-danger"><svg width="1em" height="1em"
                  viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                  <path fill-rule="evenodd"
