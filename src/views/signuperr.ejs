<% include partials/_headerhome %>
<div class="container">
    <form action="/signup/add" method="POST" style="width: 55%; margin: 0 auto;">
        <h4 style="text-align: center; background-color:#f2dede ; color: #bb6a68; padding-left: -200px; border: 1px solid #bb6a68; border-radius: 5px; padding: 5px 10px;">PLEASE SIGN UP FIRST !!</h4><br><br>    
        <h1 style="text-align: center;">Sign up</h1>
        <h4 style="text-align: center;">Create Your New Account !</h4>
        <div class="form-group">
            Username : 
            <input type="text" name="USERNAME"  class="form-control">
        </div>

        <div class="form-group">
            Email : 
            <input type="email" name="EMAIL" class="form-control">
        </div>

        <div class="form-group">
            Password : 
            <input type="password" name="PASSWORD" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary" style="margin-left: 45%;">
            Signup
        </button><br><br><br>
        <h6 style="text-align: center;"><a href="/login" >Already have an Account?</a></h6>
    </form>
</div>

