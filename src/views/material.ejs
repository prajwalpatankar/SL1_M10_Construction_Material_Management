<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <div class="card-body">

        <form action="/material/add" method="POST">
          <div class="form-group">
            <input type="text" name="MATERIAL_NAME" placeholder="Enter Material Name" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="MATERIAL_TYPE" placeholder="Enter Material Type" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="MATERIAL_GRADE" placeholder="Enter Material Grade" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="COST" placeholder="Enter Material Cost" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            save 
          </button>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>Sr. No.</td>
            <td>MATERIAL ID</td>
            <td>MATERIAL</td>
            <td>TYPE</td>
            <td>GRADE</td>
            <td>COST</td>
            <td>ACTIONS</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].MATERIAL_ID %></td>
                <td><%= data[i].MATERIAL_NAME %></td>
                <td><%= data[i].MATERIAL_TYPE %></td>
                <td><%= data[i].MATERIAL_GRADE %></td>
                <td><%= data[i].COST %></td>
                <td>
                  <a href="/material/update/<%= data[i].MATERIAL_ID %>" class="btn btn-info">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                  </a>
                  <a href="/material/delete/<%= data[i].MATERIAL_ID %>" class="btn btn-danger"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                  </svg>
                </a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% include partials/_footer %>
