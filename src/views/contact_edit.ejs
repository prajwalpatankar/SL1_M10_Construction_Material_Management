<% include partials/_header %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 offset-md-3 card">
            <div class="card-body">
                <form action="/contact/update/<%= data.CLIENT_ID %>" method="POST">
                    <div class="form-group">
                        <input type="text" name="CLIENT_ID" placeholder="Enter Client ID" class="form-control"
                            autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="PHONE" placeholder="Enter Phone number" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="EMAIL" placeholder="e-mail id" class="form-control">
                    </div>

                    <button type="submit" class="btn btn-primary">
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer %>